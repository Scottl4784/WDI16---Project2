<h1>{{series.title}}</h1>
<a href="/users/{{user._id}}/series/{{series._id}}/comics/new">Add a Comic</a>
<ul>
    {{#each series.comics}}
    <li>
        <img src="{{this.img}}">
        <a href="/users/{{../user._id}}/series/{{../series._id}}/comics/{{this._id}}">
            <h2>{{this.title}}</h2>
        </a>
        <form action="/users/{{../user._id}}/series/{{../series._id}}/comics/{{_id}}?_method=DELETE" method="POST">
            <button type="submit">Remove Comic</button>
        </form>
    </li>
    {{/each}}
</ul>